<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/activity_textsize_title</item>

        <item name="materialCardViewStyle">@style/Custom.CardView</item>
        <item name="chipStyle">@style/Custom.CardView.Chip</item>
        <item name="bottomNavigationStyle">@style/Custom.BottomNavigation</item>
        <item name="tabStyle">@style/Custom.Tab</item>
        <item name="chipGroupStyle">@style/Custom.ChipGroup</item>

        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="Custom.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="Custom.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>

    <style name="Custom.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/activity_cardview_border_radius</item>
        <item name="chipStyle">@style/Custom.CardView.Chip</item>
    </style>

    <style name="Custom.CardView.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconTint">@color/white</item>
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Custom.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipStyle">@style/Custom.ChipGroup.Chip</item>
    </style>

    <style name="Custom.ChipGroup.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
